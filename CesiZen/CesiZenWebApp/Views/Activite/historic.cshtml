@using CesiZenInfrastructure.Dto

@{
    ViewData["Title"] = "Activités";
}

<!-- Titre principal avec une taille augmentée et une couleur contrastée -->
<h1 style="text-align: center; font-size: 2.5rem; color: #333; margin-bottom: 40px; font-weight: 600; letter-spacing: 1px;">@ViewData["Title"]</h1>

<!-- Liste des activités avec des espaces entre les éléments -->
<ul style="list-style-type: none; padding: 0; margin: 0; max-width: 800px; margin-left: auto; margin-right: auto;">
    @foreach (var activityMeta in (List<ActiviteMetadataDto>)ViewData["ActivitiesMeta"])
    {
        <li style="background-color: #2E8B57; color: white; padding: 15px 20px; border-radius: 8px; margin-bottom: 15px; font-family: Arial, sans-serif; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
            <h3 style="font-size: 1.5rem; font-weight: bold; margin: 0; text-align: left; letter-spacing: 0.5px;">
                @activityMeta.Nom
            </h3>
        </li>
    }
</ul>

<!-- Ajout d'un effet visuel sur le survol des éléments de la liste -->
<style>
    li:hover {
        transform: translateY(-5px); /* Élément qui s'élève légèrement au survol */
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); /* Ombre plus marquée */
    }
</style>
