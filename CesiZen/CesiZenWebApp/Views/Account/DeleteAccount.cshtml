@{
    ViewData["Title"] = "Voulez-vous vraiment supprimer votre compte ?";
}
<h1 style="text-align: center;">@ViewData["Title"]</h1>

<div style="text-align: center; margin-top: 40px;">
    <a href="/Account/AccountVue" style="text-decoration: none;">
        <button style="background-color: #ccc; color: #333; border: none; padding: 14px 32px; border-radius: 6px; font-size: 18px; cursor: pointer; margin-right: 20px;">
            Annuler
        </button>
    </a>
    <form method="post" asp-action="ConfirmDelete" style="display:inline;">
        <button type="submit"
                style="background-color: #e53935; color: white; border: none; padding: 14px 32px; border-radius: 6px; font-size: 18px; cursor: pointer;">
            Supprimer
        </button>
    </form>

</div>
