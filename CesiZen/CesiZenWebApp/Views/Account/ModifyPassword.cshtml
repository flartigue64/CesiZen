@{
    ViewData["Title"] = "Modifier mon mot de passe";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #F5F5DC;">
    <div style="max-width: 500px; width: 100%; text-align: center;">
        <h1 style="font-weight: 900; font-size: 2rem; margin-bottom: 0.5rem;">
            @ViewData["Title"]
        </h1>
        <p style="margin-bottom: 2rem;">Saisissez votre ancien mot de passe puis le nouveau.</p>

        <div style="text-align: left;">
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div style="margin-bottom: 1rem;">
                    <input name="ancienMotDePasse" type="password" placeholder="Ancien mot de passe" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 5px;" />
                </div>
                <div style="margin-bottom: 0.5rem;">
                    <input name="nouveauMotDePasse" type="password" placeholder="Nouveau mot de passe" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 5px;" />
                </div>

                <div style="display: flex; justify-content: space-between;">
                    <a asp-action="AccountVue" style="padding: 12px 24px; background-color: #f0f0f0; border: none; border-radius: 6px; font-weight: bold; text-decoration: none; color: black;">
                        Retour
                    </a>
                    <button type="submit" style="padding: 12px 24px; background-color: #d82c4d; border: none; border-radius: 6px; color: white; font-weight: bold; cursor: pointer;">
                        VALIDER
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
