@{
    ViewData["Title"] = "Mon compte CesiZen";
}
<h1 style="text-align: center;">@ViewData["Title"]</h1>
<h5 style="text-align: center;">@ViewBag.Prenom @ViewBag.Nom</h5>

<div style="max-width: 500px; margin: 30px auto; font-family: sans-serif;">
    <div style="border: 1px solid #ddd; border-radius: 8px; overflow: hidden; background-color: #555555;">
        <div style="display: flex; justify-content: space-between; padding: 16px; border-bottom: 1px solid #eee;">
            <span style="color: white;">@ViewBag.Email</span>
        </div>
        <div style="display: flex; justify-content: space-between; padding: 16px; border-bottom: 1px solid #eee;">
            <span style="color: white;">Mot de passe</span>
            <a href="/Account/ModifyPassword" style="color: #c00; font-weight: bold; text-decoration: none;">Modifier</a>
        </div>

        <a href="/Account/DeleteAccount" style="text-decoration: none;">
            <div style="display: flex; justify-content: space-between; padding: 16px; border-bottom: 1px solid #eee; cursor: pointer; color: white;">
                <span>Supprimer mon compte</span>
                <span style="color: #888;">&#x276F;</span>
            </div>
        </a>


    </div>

    <div style="text-align: center; margin-top: 1em;">
        <form asp-action="Logout" method="post">
            <button type="submit" style="padding: 0.5em 1em;">Se déconnecter</button>
        </form>
    </div>

</div>
