<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CesiZenMobileApp.PilatePage"
             Title="ÉcoutedesonsrelaxantsPage"
             BackgroundColor="#F5F5DC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Titre principal -->
            <Label Text='🧘‍♀️ Pilates Express – "Centrage et mobilité"'
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="#2E8B57" />

            <!-- Échauffement -->
            <Label Text="🔹 Échauffement (2 min)"
                   FontSize="20"
                   TextColor="Green"
                   FontAttributes="Bold" />

            <!-- Respiration profonde -->
            <VerticalStackLayout Spacing="5">
                <Label Text="• Respiration profonde (1 min):"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="Black" />
                <Label Text="Allongé(e) sur le dos, inspire profondément par le nez, sens l'air remplir tes poumons, puis expire lentement par la bouche en contractant les abdos."
                       FontSize="16"
                       TextColor="Black" />
                <Label Text="Cette respiration aide à se détendre et à se concentrer."
                       FontSize="16"
                       FontAttributes="Italic"
                       TextColor="Black" />
            </VerticalStackLayout>

            <!-- Bascule du bassin -->
            <VerticalStackLayout Spacing="5">
                <Label Text="• Bascule du bassin (1 min):"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="Black" />
                <Label Text="Allongé(e) sur le dos, genoux fléchis et pieds à plat sur le sol. Inspire pour garder le bas du dos légèrement creusé, puis expire pour basculer le bassin vers l’avant et aplatir le bas du dos contre le tapis."
                       FontSize="16"
                       TextColor="Black" />
                <Label Text="Cela aide à préparer la colonne vertébrale à des mouvements plus profonds."
                       FontSize="16"
                       FontAttributes="Italic"
                       TextColor="Black" />
            </VerticalStackLayout>

            <!-- Corps de séance -->
            <Label Text="🔹 Corps de séance (6 min)"
                   FontSize="20"
                   TextColor="Green"
                   FontAttributes="Bold" />

            <!-- Exercices du corps de séance -->
            <VerticalStackLayout Spacing="10">

                <!-- The Hundred -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• The Hundred (1 min) – Version modifiée:"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="Allongé(e) sur le dos, jambes fléchies ou tendues à 45°, bras levés à 10 cm du sol. Effectue de petits battements rapides avec les bras, inspirant sur 5 battements et expirant sur 5."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cet exercice active le centre du corps (core) et stimule la circulation sanguine."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>

                <!-- Single Leg Stretch -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• Single Leg Stretch (1 min):"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="Allongé(e) sur le dos, genoux pliés, ramène une jambe à la poitrine et étends l'autre à 45°. Alterne les jambes en tendant l'une et ramenant l'autre vers toi à chaque expiration."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cela renforce les abdos tout en étirant les hanches."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>

                <!-- Rolling Like a Ball -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• Rolling Like a Ball (1 min):"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="Assis(e), genoux ramenés à la poitrine, mains sur les tibias. Inspire pour rouler lentement en arrière jusqu'aux omoplates, puis expire pour revenir en position assise."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cet exercice massera la colonne vertébrale et renforce la stabilité du tronc."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>

                <!-- Shoulder Bridge -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• Shoulder Bridge (2 min):"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="Allongé(e) sur le dos, genoux fléchis, pieds à plat sur le sol. Soulève le bassin vers le ciel en engageant les abdos et les fessiers. Reste en position en respirant profondément, puis redescends lentement."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cet exercice renforce les fessiers, le dos et améliore la posture."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>

                <!-- Stretch chat/vache -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• Stretch chat/vache (1 min):"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="À quatre pattes, alterne entre arrondir le dos (position du chat) et l'incliner vers le bas (position de la vache)."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cette séquence aide à assouplir la colonne vertébrale et à détendre le dos."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Retour au calme -->
            <Label Text="🔹 Retour au calme (2 min)"
                   FontSize="20"
                   TextColor="Green"
                   FontAttributes="Bold" />

            <!-- Exercices de retour au calme -->
            <VerticalStackLayout Spacing="10">

                <!-- Enroulement vertébral debout -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• Enroulement vertébral debout:"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="Debout, bras tendus devant toi. Inspire et commence à rouler lentement la colonne vertébrale vers le sol, en partant du haut. Laisse la tête et les bras être lourds. En bas, respire et déroule lentement vers le haut."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cet exercice aide à étirer le dos et à améliorer la mobilité de la colonne."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>

                <!-- Respiration profonde assise -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="• Respiration profonde assise:"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <Label Text="Assis(e) confortablement, les mains sur les genoux. Inspire profondément en levant les bras au-dessus de la tête, puis expire en relâchant les bras doucement vers les côtés."
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Cette respiration calme l'esprit et détend le corps."
                           FontSize="16"
                           FontAttributes="Italic"
                           TextColor="Black" />
                </VerticalStackLayout>
            </VerticalStackLayout>

            <Button Text="Terminer"
                BackgroundColor="BlueViolet"
                TextColor="White"
                Padding="10"
                Clicked="OnFinishClicked"
                CornerRadius="10" />

            <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" IsVisible="False" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
