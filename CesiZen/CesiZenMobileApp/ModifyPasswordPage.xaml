<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CesiZenMobileApp.ModifyPasswordPage"
             Title="Modifier mon mot de passe"
             BackgroundColor="#F5F5DC">

    <VerticalStackLayout Padding="20">
        <Label 
            TextColor="#2E8B57"
            Text="Modifier le mot de passe"
            HorizontalOptions="Center" 
            FontSize="Medium" 
            Margin="0,0,0,30"/>

        <Entry x:Name="ActualPassEntry" Placeholder="Mot de passe actuel" TextColor="Black" />
        <Entry x:Name="NewPassEntry" Placeholder="Nouveau Mot de passe" TextColor="Black" />

        <Button 
            BackgroundColor="#2E8B57"
            TextColor="White"
            Margin="0,30,0,0"
            Text="Valider" 
            Clicked="ModifyPasswordConfirm" />

        <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
