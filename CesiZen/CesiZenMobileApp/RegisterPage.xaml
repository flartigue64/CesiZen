<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CesiZenMobileApp.RegisterPage"
             Title="Inscription"
             BackgroundColor="#F5F5DC">

    <VerticalStackLayout Padding="20">

        <Label 
            TextColor="#2E8B57"
            Text="Remplissez ce formulaire pour créer un compte"
            HorizontalOptions="Center" 
            FontSize="Medium" 
            Margin="0,0,0,30"
            />

        <Entry x:Name="NomEntry" Placeholder="Nom" TextColor="Black" />
        <Entry x:Name="PrenomEntry" Placeholder="Prénom" TextColor="Black" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" TextColor="Black" />
        <Entry x:Name="MotDePasseEntry" Placeholder="Mot de passe" IsPassword="True" TextColor="Black" />

        <Button 
            Margin="0,30,0,0"
            Text="S'inscrire" 
            Clicked="OnRegisterClicked" />

        <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
