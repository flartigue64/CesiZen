<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CesiZenMobileApp.ConnexionPage"
             Title="Connexion"
             BackgroundColor="#F5F5DC">

    <StackLayout Padding="20">

        <Label 
            TextColor="#2E8B57"
            Text="Email"/>
        <Entry x:Name="EmailEntry" Placeholder="Entrez votre email" TextColor="Black" />

        <Label 
            Margin="0,10,0,0"
            TextColor="#2E8B57"
            Text="Mot de passe"/>
        <Entry x:Name="PasswordEntry" Placeholder="Entrez votre mot de passe" IsPassword="True" TextColor="Black" />

        <Label x:Name="MessageLabel" TextColor="Red" />

        <Button 
            FontAttributes="Bold"
            TextColor="White"
            BackgroundColor="#2E8B57"
            Text="Se connecter" 
            Clicked="OnConnexionClicked" />

        <Label Text="CrÃ©er un compte"
           Margin="0,20,0,0"
           FontSize="16"
           TextColor="#2E8B57"
           HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRegisterTapped" />
            </Label.GestureRecognizers>
        </Label>


    </StackLayout>

</ContentPage>
