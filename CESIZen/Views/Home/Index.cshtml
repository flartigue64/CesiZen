@model List<CESIZen.Models.Activite>

@{
    ViewData["Title"] = "Accueil";
}

<style>
    body {
        background-color: #fef9e7; /* blanc cassé en background */
        color: #222222; /* texte sombre */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 span {
        color: #2E8B57; /* vert pour "CesiZen" */
    }

    /* Style description */
    #activiteDescription {
        background-color: #dfe6d0; /* vert clair très doux */
        border-color: #a4b78e;
        color: #222222;
    }
</style>

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-8 offset-md-2 text-center">
            <h2 class="mb-3">Bienvenue sur <span>CesiZen</span></h2>
            <p class="lead">
                CesiZen est une application innovante dédiée au bien-être,
                qui permet aux utilisateurs de réaliser facilement des activités relaxantes et de découvrir une multitude d’articles inspirants sur le bien-être.
                Que vous cherchiez à prendre soin de vous au quotidien ou à explorer de nouvelles pratiques apaisantes,
                CesiZen vous offre une expérience fluide et enrichissante,
                avec des outils simples et intuitifs pour vous accompagner à chaque étape.
            </p>
        </div>
    </div>

    <div class="container py-5">
        <h3>Liste des activités</h3>

        <select class="form-select mb-3" id="activiteSelect" aria-label="Liste des activités">
            <option value="" selected hidden>-- Choisissez une activité --</option>
            @foreach (var activite in Model)
            {
                <option value="@activite.Id" data-description="@activite.Description">
                    @activite.Nom
                </option>
            }
        </select>

        <!-- Conteneur pour afficher la description -->
        <div id="activiteDescription" class="alert alert-info" style="display:none;"></div>

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById("activiteSelect");
        const descContainer = document.getElementById("activiteDescription");

        select.addEventListener("change", function () {
            const selectedOption = select.options[select.selectedIndex];
            const description = selectedOption.getAttribute("data-description");

            if (description) {
                descContainer.style.display = "block";
                descContainer.innerText = description;
            } else {
                descContainer.style.display = "none";
                descContainer.innerText = "";
            }
        });
    });
</script>
