@model CESIZen.Models.Article

@{
    ViewData["Title"] = "Créer une information";
}

<style>
    body {
        background-color: #FEF9E7;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Titre" class="control-label">Titre</label>
            <input asp-for="Titre" class="form-control" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Contenu" class="control-label">Contenu</label>
            <textarea asp-for="Contenu" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Contenu" class="text-danger"></span>
        </div>

        <div class="form-group mb-3 text-center">
            <button type="submit" class="btn" style="background-color: #00BF63; color: white; padding: 10px 25px; border-radius: 4px;">
                Créer
            </button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Retour à la liste</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
