@model CESIZen.Models.Article

@{
    ViewData["Title"] = "Modifier l'article";
}

<style>
    body {
        background-color: #FEF9E7;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Titre" class="control-label">Titre</label>
            <input asp-for="Titre" class="form-control" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Contenu" class="control-label">Contenu</label>
            <textarea asp-for="Contenu" class="form-control" rows="10"></textarea>
            <span asp-validation-for="Contenu" class="text-danger"></span>
            <small class="form-text text-muted">Vous pouvez utiliser du HTML de base pour mettre en forme le contenu.</small>
        </div>

        <div class="form-group mt-4 d-flex justify-content-between">
            <div>
                <button type="submit" class="btn" style="background-color: #00BF63; color: white; padding: 10px 25px; border-radius: 4px;">
                    Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Annuler</a>
            </div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                Voir les détails
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
