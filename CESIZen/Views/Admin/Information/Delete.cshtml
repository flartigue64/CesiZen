@model CESIZen.Models.Article

@{
    ViewData["Title"] = "Supprimer l'article";
}

<style>
    body {
        background-color: #FEF9E7;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <h2 class="mb-4 text-center text-danger">Êtes-vous sûr de vouloir supprimer cet article ?</h2>

    <div class="alert alert-warning d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Cette action est <strong> irréversible</strong>.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
            <h4 class="mb-0">@Model.Titre</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Contenu</dt>
                <dd class="col-sm-9">
                    <div class="p-2 border rounded bg-light">
                        @Html.Raw(Model.Contenu?.Length > 200
                                 ? Model.Contenu.Substring(0, 200) + "..."
                                 : Model.Contenu)
                    </div>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <div>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmer la suppression
                </button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Annuler</a>
            </div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                Voir les détails
            </a>
        </div>
    </form>
</div>
