@model CESIZen.Models.Article

@{
    ViewData["Title"] = "Détails de l'article";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Détails de l'article</h2>

            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>@Model.Titre</h4>
                </div>
                    <div class="content-display mt-4">
                        <h5>Contenu :</h5>
                        <div class="p-3 border rounded">
                            @Html.Raw(Model.Contenu)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifier</a>
                            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                        </div>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette information?');">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
