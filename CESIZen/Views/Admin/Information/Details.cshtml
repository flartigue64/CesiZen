@model CESIZen.Models.Article

@{
    ViewData["Title"] = "Détails de l'article";
}

<style>
    body {
        background-color: #FEF9E7;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Titre</h4>
        </div>

        <div class="card-body">
            <h5>Contenu :</h5>
            <div class="p-3 border rounded bg-light">
                @Html.Raw(Model.Contenu)
            </div>
        </div>

        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifier</a>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Retour à la liste</a>
                </div>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette information ?');">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
