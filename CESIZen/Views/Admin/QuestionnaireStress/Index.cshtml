@model IEnumerable<CESIZen.Models.QuestionnaireStress>

@{
    ViewData["Title"] = "Gestion du questionnaire de stress";
}

<h1>Événements par points de stress</h1>

<p>
    <a asp-controller="QuestionnaireStressesAdmin" asp-action="Create" class="btn btn-primary">Ajouter un événement</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Libelle)</th>
                <th>@Html.DisplayNameFor(model => model.Valeur)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Libelle)</td>
                    <td>@Html.DisplayFor(modelItem => item.Valeur)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="QuestionnaireStressesAdmin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a> |
                            <a asp-controller="QuestionnaireStressesAdmin" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a> |
                            <a asp-controller="QuestionnaireStressesAdmin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
