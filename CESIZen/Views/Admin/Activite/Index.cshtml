@model IEnumerable<CESIZen.Models.Activite>

@{
    ViewData["Title"] = "Gestion des activités";
}

<style>
    body {
        background-color: #FEF9E7;
    }
</style>

<h1>Liste des activités</h1>

<p>
    <a asp-controller="ActiviteAdmin" asp-action="Create"
       class="btn"
       style="background-color: #00BF63; color: white;">
        Ajouter une activité
    </a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nom)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-controller="ActiviteAdmin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                            <a asp-controller="ActiviteAdmin" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                            <a asp-controller="ActiviteAdmin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
