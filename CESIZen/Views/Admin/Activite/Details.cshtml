@model CESIZen.Models.Activite

@{
    ViewData["Title"] = "Détails de l'activité";
}

<h1>Détails de l'activité</h1>

<div>
    <h4>Activité</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContenuHtml)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.ContenuHtml)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-controller="ActiviteAdmin" asp-route-id="@Model?.Id">Editer</a> |
    <a asp-action="Index" asp-controller="ActiviteAdmin">Retour à la liste</a>
</div>
