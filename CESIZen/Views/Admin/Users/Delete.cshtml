@model CESIZen.Models.Utilisateur

@{
    ViewData["Title"] = "Supprimer l'utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #fef9e7;
    }
</style>

<h1>Supprimer l'utilisateur</h1>

<div class="alert alert-danger">
    <h3>Êtes-vous sûr de vouloir supprimer cet utilisateur?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Nom</dt>
        <dd class="col-sm-9">@Model.Nom</dd>

        <dt class="col-sm-3">Prénom</dt>
        <dd class="col-sm-9">@Model.Prenom</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Mail</dd>

        <dt class="col-sm-3">Téléphone</dt>
        <dd class="col-sm-9">@Model.Tel</dd>

        <dt class="col-sm-3">Statut</dt>
        <dd class="col-sm-9">@Model.Statut</dd>

        <dt class="col-sm-3">Rôle(s)</dt>
        <dd class="col-sm-9">
            @if (ViewBag.UserRoles != null)
            {
                @string.Join(", ", ViewBag.UserRoles)
            }
        </dd>
    </dl>

    <form asp-controller="UserAdmin" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-controller="UserAdmin" asp-action="UsersList" class="btn btn-secondary">Annuler</a>
    </form>
</div>
